# Set default behavior for all files
* text=auto

# Force LF for all source code and text files
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.mdx    text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.ps1    text eol=lf
*.env    text eol=lf

# Force CRLF only for Windows-specific scripts
*.bat    text eol=crlf
*.cmd    text eol=crlf